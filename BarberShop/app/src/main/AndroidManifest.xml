<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.pro.pedro.barbershop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BarberShop">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/actions" />

        <activity
            android:name=".FormEmplActivity"
            android:exported="false"
            android:label="@string/title_activity_form_empl"
            android:theme="@style/Theme.BarberShop.NoActionBar" />
        <activity
            android:name=".ListEmplActivity"
            android:exported="false"
            android:label="@string/title_activity_list_employee"
            android:theme="@style/Theme.BarberShop.NoActionBar" />
        <activity
            android:name=".FormScheduleActivity"
            android:exported="false"
            android:label="@string/agenda"
            android:theme="@style/Theme.BarberShop.NoActionBar" />
        <activity
            android:name=".ListScheduleActivity"
            android:exported="false"
            android:label="@string/agendaMenu"
            android:theme="@style/Theme.BarberShop.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>